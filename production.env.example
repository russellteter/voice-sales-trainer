# Production Environment Configuration
# Copy this file to .env and update the values for production deployment

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://username:password@db-host:5432/voice_sales_trainer
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://redis-host:6379/0
REDIS_PASSWORD=your-redis-password
REDIS_MAX_CONNECTIONS=100

# ===========================================
# JWT & AUTHENTICATION
# ===========================================
JWT_SECRET_KEY=generate-a-secure-256-bit-key-for-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# ===========================================
# SECURITY SETTINGS
# ===========================================
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=generate-a-unique-secret-key-for-production
ALLOWED_HOSTS=your-domain.com,api.your-domain.com
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://app.your-domain.com

# ===========================================
# SSL/TLS CONFIGURATION
# ===========================================
USE_SSL=true
SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
SSL_KEY_PATH=/etc/ssl/private/your-domain.key
FORCE_HTTPS=true

# ===========================================
# DOMAIN & URL CONFIGURATION
# ===========================================
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://api.your-domain.com
API_V1_STR=/api/v1
PROJECT_NAME=Voice Sales Trainer API

# ===========================================
# ELEVENLABS VOICE API
# ===========================================
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=your-preferred-voice-id
ELEVENLABS_MODEL_ID=eleven_turbo_v2_5
ELEVENLABS_STABILITY=0.7
ELEVENLABS_CLARITY=0.8

# ===========================================
# CLAUDE AI INTEGRATION
# ===========================================
CLAUDE_API_KEY=your-claude-api-key
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=150
CLAUDE_TIMEOUT=30

# ===========================================
# PERFORMANCE & SCALING
# ===========================================
MAX_CONCURRENT_SESSIONS=200
SESSION_TIMEOUT_MINUTES=30
VOICE_PROCESSING_TIMEOUT=10
WS_HEARTBEAT_INTERVAL=30
WS_MAX_MESSAGE_SIZE=2097152

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_PER_MINUTE=120
VOICE_REQUESTS_PER_MINUTE=60
API_RATE_LIMIT_BURST=20

# ===========================================
# LOGGING & MONITORING
# ===========================================
LOG_LEVEL=INFO
ENABLE_METRICS_COLLECTION=true
METRICS_RETENTION_DAYS=90
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===========================================
# FILE UPLOAD SETTINGS
# ===========================================
MAX_UPLOAD_SIZE=52428800
UPLOAD_DIR=/app/uploads
ALLOWED_FILE_TYPES=.wav,.mp3,.ogg,.webm

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASSWORD=your-smtp-password
SMTP_TLS=true
FROM_EMAIL=noreply@your-domain.com

# ===========================================
# HEALTH CHECK CONFIGURATION
# ===========================================
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# ===========================================
# WORKER CONFIGURATION
# ===========================================
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
WORKER_TIMEOUT=30
KEEP_ALIVE=5

# ===========================================
# CACHE CONFIGURATION
# ===========================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
ENABLE_RESPONSE_CACHING=true

# ===========================================
# ANALYTICS & TELEMETRY
# ===========================================
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
ENABLE_USAGE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=365

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_VOICE_ANALYTICS=true
ENABLE_REAL_TIME_COACHING=true
ENABLE_DEBUG_AUDIO_LOGGING=false
MOCK_ELEVENLABS_RESPONSES=false
TEST_MODE=false

# ===========================================
# CDN CONFIGURATION (Optional)
# ===========================================
CDN_URL=https://cdn.your-domain.com
STATIC_URL=/static/
MEDIA_URL=/media/

# ===========================================
# WEBSOCKET CONFIGURATION
# ===========================================
WS_ALLOWED_ORIGINS=https://your-domain.com,https://app.your-domain.com
WS_PING_INTERVAL=25
WS_PING_TIMEOUT=20
WS_CLOSE_TIMEOUT=10